rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Función helper admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.uid == 'LTNwDZDCH6cZwqhVH7Ol1guYBuJ2' ||
        request.auth.token.email == 'admin@skyworth.com'
      );
    }

    // Carpeta temporal de subidas (write-only para usuarios anónimos/públicos)
    match /uploads/{folder}/{fileName} {
      // Allow generic image/pdf types. 
      // Removed exact size check here to rely on Client/Function validation or relax it slightly to 10MB to be safe.
      allow write: if request.resource.size < 10 * 1024 * 1024;
                   // && request.resource.contentType.matches('image/.*|application/pdf'); 
                   // Content-type check disabled temporarily to fix "Missing Permissions" on weird mime types.
      allow read: if isAdmin(); 
    }

    // Resto del bucket cerrado
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}